{
  "$id": "generate-lyrics",
  "name": "Generate Lyrics",
  "runtime": "node-20.0",
  "entrypoint": "src/index.js",
  "commands": "npm install && npm run setup",
  "events": [
    "databases.mitchly-music-db.collections.songs.documents.*.update"
  ],
  "schedule": "",
  "timeout": 30,
  "enabled": true,
  "logging": true,
  "execute": ["any"],
  "scopes": [
    "databases.read",
    "databases.write"
  ],
  "variables": {
    "ANTHROPIC_API_KEY": ""
  }
}
